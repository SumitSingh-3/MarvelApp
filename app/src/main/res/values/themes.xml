<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_f3424a</item>
        <item name="colorPrimaryVariant">@color/color_F0131E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_f3424a</item>
        <item name="colorSecondaryVariant">@color/color_F0131E</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SearchInputStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/search_input_bg</item>
        <item name="android:textColor">@color/color_F0131E</item>
        <item name="android:textColorHint">@color/color_808080</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
</resources>